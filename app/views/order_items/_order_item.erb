<div class="well col-md-6 col-md-offset-3">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-xs-4" style="text-align: center;">
        <%= image_tag order_item.product.display_image if order_item.product.image.attached? %>
      </div>
      <div class="show_item">
        <div class="table-item">
          <div class="name-item col-xs-4">
            <div>
              <%= order_item.product.name %>
              x
              <%= order_item.quantity%>
            </div>
            <div class="item_price">
              <%= number_to_currency(order_item.total_price) %>
            </div>
          <%= form_for order_item, remote: true do |f| %>
          </div>
          <div class="D-U-item" style="flex-direction: column;">
              <%= f.hidden_field :product_id, value: order_item.product.id %>
              <%= f.number_field :quantity, class:"form-control", value: order_item.quantity %>
            <button class="">
              <%= link_to "delete", [order_item], method: :delete,
                                                data: { confirm: "You sure?" },
                                                style:'text-decoration: none' %>
            </button>
              <%= f.submit "Cập Nhật Giỏ Hàng", class:"btn-card", style:"margin-top: 10px" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>









