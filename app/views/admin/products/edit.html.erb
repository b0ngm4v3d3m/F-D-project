<% provide(:title, "Cập Nhật Món Ăn") %>
<h1 class="text-center">Cập Nhật Món Ăn</h1>
<div class="row">
  <div class="col-md-6 offset-3" >
    <%= form_for([:admin,@product]) do |f| %>

      <label for="product_name">Tên</label>
      <%= f.text_field :name, class: 'form-control' %>

      <label for="product_content">Nội Dung</label>
      <%= f.text_field :content, class: 'form-control' %>

      <label for="product_price">Giá Cả</label>
      <%= f.number_field :price, class: 'form-control' %>

      <span class="image">
        <%= f.file_field :image %>
      </span>

      <%= f.submit "Lưu Thay Đổi", class: "btn btn-primary mb-3 mt-2" %>
    <% end %>
  </div>
</div>
