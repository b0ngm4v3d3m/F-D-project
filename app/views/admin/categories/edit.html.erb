<% provide(:title, "Edit category") %>
<h1 class="text-center">Cập Nhật Thể Loại</h1>
<div class="row">
  <div class="col-md-6 offset-3" >
    <%= form_for([:admin,@category]) do |f| %>

      <label for="category_name">Tên</label>
      <%= f.text_field :name, class: 'form-control' %>

      <label for="category_content">Nội Dung</label>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.submit "Lưu Thay Đổi", class: "btn btn-primary mb-3 mt-2" %>
    <% end %>
  </div>
</div>
